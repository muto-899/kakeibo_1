<div class="contents">
  <h1>詳細</h1>
  <table border="1" width="40%">
    <thead>
      <tr>
        <th>日付</th>
        <th>収入/分類</th>
        <th>収入</th>
        <th>出費/分類</th>
        <th>出費</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <tr align="center">
        <td><%= @dec_date.created_at.strftime("%m月%d日") %></td>
        <td><%= @dec_date.income_category %></td>
        <td><%= @dec_date.income %></td>
        <td><%= @dec_date.pay_category %></td>
        <td><%= @dec_date.pay %></td>
        <td><%= link_to edit_dec_date_path do %><i class="fas fa-angle-right fa-lg"></i><% end %></td>
        <td><%= link_to "/dec_dates/#{@dec_date.id}/destroy", {method:"delete"} do %><i class="fas fa-trash"></i><% end %></td>
      </tr>
    </tbody>
  </table>
</div>