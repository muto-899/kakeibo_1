<header>
  <div class="header-logo">
    <%= link_to"HOME", root_path %>
  </div>
  <div class="header-list">
    <ul>
      <li><%= link_to"login", new_user_session_path %></li>
      <li><%= link_to"signin", new_user_registration_path %></li>
      <li><%= link_to"signout", destroy_user_session_path %></li>
      <li><%= link_to"Home/index", home_index_path %></li>
    </ul>
  </div>
</header>
<%= @date.strftime("%Y年%m月%d日") %>

<%= form_tag ("/oct_dates/create") do %>
  <%= label_tag :分類 %>
  <%= select_tag :pay_category, 
      options_for_select(["食費","交際費","習い事","交通費","娯楽","生活費","衣服","美容","健康","光熱費","慶弔費","その他"]) %>
  <%= label_tag :金額 %>
  <%= number_field_tag :pay %>円
  <%= submit_tag "追加" %>
<% end %>